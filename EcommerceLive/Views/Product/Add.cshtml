@model AddProductModel;

@{
    ViewData["Title"] = "Add Product";
}

<h3>Add Product</h3>

<div>
    <form method="post" asp-controller="Product" asp-action="Add">
        @* Per scrivere in modo statico un token per l'invio dei dati *@
        @* @Html.AntiForgeryToken(); *@

        <div class="mt-2">
            <label for="firstName" class="form-label" asp-for="Name"></label>
            <input id="firstName" asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        

        <div class="mt-2">
            <label for="description" class="form-label" asp-for="Description"></label>
            <textarea id="description" asp-for="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>

        </div>
        

        <div class="mt-2">
            <label for="category" class="form-label" asp-for="Category"></label>
            <input id="category" asp-for="Category" class="form-control" />
            <span class="text-danger" asp-validation-for="Category"></span>

        </div>
        

        <div class="mt-2">
            <label for="price" class="form-label" asp-for="Price"></label>
            <input id="price" asp-for="Price" class="form-control" />
            <span class="text-danger" asp-validation-for="Price"></span>

        </div>
        
        <div class="mt-3">
            <button class="btn btn-warning">Save</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </form>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}